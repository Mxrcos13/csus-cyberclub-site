---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const writeups = await getCollection('writeups');
const sortedWriteups = writeups.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

const categoryColors = {
  web: 'bg-blue-100 text-blue-800',
  crypto: 'bg-purple-100 text-purple-800',
  pwn: 'bg-red-100 text-red-800',
  reverse: 'bg-green-100 text-green-800',
  forensics: 'bg-yellow-100 text-yellow-800',
  misc: 'bg-gray-100 text-gray-800',
};

const difficultyColors = {
  easy: 'bg-green-500',
  medium: 'bg-yellow-500',
  hard: 'bg-red-500',
};
---

<Layout title="Writeups" description="CTF writeups and cybersecurity tutorials">
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl font-bold mb-4 text-forest-green">CTF Writeups</h1>
      <p class="text-lg text-gray-600 mb-12 max-w-3xl">
        Detailed solutions and explanations of CTF challenges. Learn from our approach
        to various cybersecurity problems across different categories.
      </p>

      {writeups.length === 0 ? (
        <div class="bg-pale-gold border-l-4 border-light-gold p-6 rounded-lg">
          <p class="text-gray-700">No writeups yet. Check back soon for new content!</p>
        </div>
      ) : (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {sortedWriteups.map((writeup) => (
            <a
              href={`/writeups/${writeup.slug}`}
              class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow overflow-hidden border-t-4 border-forest-green"
            >
              <div class="p-6">
                <div class="flex items-start justify-between mb-3">
                  <span class={`px-3 py-1 rounded-full text-xs font-semibold ${categoryColors[writeup.data.category]}`}>
                    {writeup.data.category.toUpperCase()}
                  </span>
                  <div class={`w-3 h-3 rounded-full ${difficultyColors[writeup.data.difficulty]}`} title={writeup.data.difficulty} />
                </div>

                <h2 class="text-xl font-bold text-gray-900 mb-2 line-clamp-2">
                  {writeup.data.title}
                </h2>

                <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                  {writeup.data.description}
                </p>

                {writeup.data.ctf && (
                  <p class="text-xs text-gray-500 mb-2">
                    üèÜ {writeup.data.ctf}
                  </p>
                )}

                <div class="flex items-center justify-between text-sm">
                  <span class="text-gray-500">
                    {writeup.data.pubDate.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric',
                    })}
                  </span>
                  <span class="text-forest-green font-medium">
                    By {writeup.data.author}
                  </span>
                </div>

                {writeup.data.tags && writeup.data.tags.length > 0 && (
                  <div class="mt-3 flex flex-wrap gap-2">
                    {writeup.data.tags.map((tag) => (
                      <span class="text-xs bg-gray-100 text-gray-600 px-2 py-1 rounded">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </a>
          ))}
        </div>
      )}
    </div>
  </section>
</Layout>
