---
import Layout from '../layouts/Layout.astro';
const baseUrl = import.meta.env.BASE_URL;
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-forest-green to-dark-forest text-white py-20">
    <div class="container mx-auto px-4 text-center">
      <img src={`${baseUrl}/logo.png`} alt="Sacramento State Cyber Security Club" class="w-56 h-56 mx-auto mb-8 object-contain" />
      <h1 class="text-5xl font-bold mb-4">Sacramento State <span class="text-light-gold">Cyber Security Club</span></h1>
      <p class="text-xl mb-8 text-pale-gold">Hack. Learn. Compete. Defend.</p>
      <p class="text-lg max-w-2xl mx-auto mb-8">
        Join Sacramento State's community of cybersecurity enthusiasts dedicated to learning ethical hacking,
        competing in CTF challenges, and building practical security skills.
      </p>
      <a
        href="https://discord.gg/yeBQJuk3yf"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block bg-light-gold text-dark-forest px-8 py-3 rounded-lg font-semibold hover:bg-pale-gold transition-colors"
      >
        Join Our Discord
      </a>
    </div>
  </section>

