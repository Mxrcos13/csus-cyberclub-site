---
const currentPath = Astro.url.pathname;
const baseUrl = import.meta.env.BASE_URL;
---

<header class="bg-forest-green text-white shadow-lg">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <a href={baseUrl} class="flex items-center space-x-3 hover:opacity-90 transition-opacity">
        <img src={`${baseUrl}/logo.png`} alt="Sacramento State Cyber Security Club" class="h-14 w-auto object-contain" />
        <div class="flex flex-col">
          <span class="text-sm text-light-gold font-semibold leading-tight">Sacramento State</span>
          <span class="text-lg text-white font-bold leading-tight">Cyber Security Club</span>
        </div>
      </a>

      <div class="flex space-x-6">
        <a
          href="/"
          class={`hover:text-light-gold transition-colors ${currentPath === '/' ? 'text-light-gold font-semibold' : ''}`}
        >
          Home
        </a>
        <a
          href="/about"
          class={`hover:text-light-gold transition-colors ${currentPath === '/about' ? 'text-light-gold font-semibold' : ''}`}
        >
          About
        </a>
        <a
          href="https://discord.gg/yeBQJuk3yf"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-light-gold transition-colors flex items-center gap-1"
        >
          Discord
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
        </a>
        <a
          href="/contact"
          class={`hover:text-light-gold transition-colors ${currentPath === '/contact' ? 'text-light-gold font-semibold' : ''}`}
        >
          Contact
        </a>
      </div>
    </div>
  </nav>
</header>
